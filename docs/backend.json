{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["student", "organizer", "admin"] },
        "interests": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name", "email", "role"]
    },
    "Event": {
      "title": "Event",
      "type": "object",
      "description": "Represents an event.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "time": { "type": "string" },
        "venue": { "type": "string" },
        "category": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "createdBy": { "type": "string" }
      },
      "required": ["title", "date", "venue", "createdBy"]
    },
    "Registration": {
      "title": "Registration",
      "type": "object",
      "description": "Links a user to an event they registered for.",
      "properties": {
        "userId": { "type": "string" },
        "eventId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "eventId", "createdAt"]
    },
    "Attendance": {
        "title": "Attendance",
        "type": "object",
        "properties": {
            "eventId": { "type": "string" },
            "userId": { "type": "string" },
            "present": { "type": "boolean" },
            "timestamp": { "type": "string", "format": "date-time"}
        },
        "required": ["eventId", "userId", "present", "timestamp"]
    },
    "Certificate": {
        "title": "Certificate",
        "type": "object",
        "properties": {
            "uuid": { "type": "string" },
            "hash": { "type": "string" },
            "eventId": { "type": "string" },
            "userId": { "type": "string" },
            "issueDate": { "type": "string", "format": "date-time"}
        },
        "required": ["uuid", "hash", "eventId", "userId", "issueDate"]
    },
     "Report": {
        "title": "Report",
        "type": "object",
        "properties": {
            "eventId": { "type": "string" },
            "images": { "type": "array", "items": { "type": "string", "format": "uri" } },
            "generatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["eventId", "generatedAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile data."
    },
    "/events/{eventId}": {
      "schema": { "$ref": "#/entities/Event" },
      "description": "Stores all events."
    },
    "/registrations/{registrationId}": {
      "schema": { "$ref": "#/entities/Registration" },
      "description": "Stores event registration records."
    },
    "/attendance/{attendanceId}": {
      "schema": { "$ref": "#/entities/Attendance" },
      "description": "Stores attendance records for events."
    },
    "/certificates/{certificateId}": {
      "schema": { "$ref": "#/entities/Certificate" },
      "description": "Stores generated certificates for users."
    },
    "/reports/{reportId}": {
        "schema": { "$ref": "#/entities/Report" },
        "description": "Stores generated event reports."
    }
  }
}
